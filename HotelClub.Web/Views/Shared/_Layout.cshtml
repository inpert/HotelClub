<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - HotelClub by Rafael Fernandes - contact@rafaelfernandes.net</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body class="container">

    <div class="container">
        <div class="container">
            <div class="navbar-header">
                <a href="~/" class="navbar-brand">HotelClub
                </a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">
                            <span class="glyphicon glyphicon-question-sign"></span>
                            About <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="Ajuda">
                            <li>
                                <a href="~/About/Author">
                                    <span class="glyphicon glyphicon-user"></span>
                                    Author
                                </a>
                            </li>
                            <li>
                                <a href="~/About/Project">
                                    <span class="glyphicon glyphicon-ok-sign"></span>

                                    Project
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="~/Home/Contact">
                            <span class="glyphicon glyphicon-phone"></span>
                            Contact
                        </a>
                    </li>
                    <li>
                        <a href="~/Hotel/">
                            <span class="glyphicon glyphicon-home"></span>
                            Hotels
                        </a>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">
                            <span class="glyphicon glyphicon-heart"></span>
                            My Profile <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="Ajuda">
                            <li>@Html.ActionLink("Change Profile", "Index", "Profile")</li>
                            <li>@Html.ActionLink("Change Payment", "Index", "Profile")</li>
                        </ul>
                    </li>
                </ul>
                <span class="pull-right">
                    @*@Html.Partial("_LoginPartial")*@
                </span>
            </div>
        </div>
        <br />
        <div class="alert alert-success ">
            <p class="lead">Thank you for checking this project, all functionalities are <span class="label label-warning">yet</span> to be shared in this UI layer.</p>
            <small>Rafael Fernandes</small>
            <small>
                <a href="mailto:contact@rafaelfernandes.net?Subject=Opportunities%20for%20you" target="_top">contact@rafaelfernandes.net</a>
            </small>
        </div>
        <br />
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="modal-footer">
                    <div class="pull-left">
                        &copy; @DateTime.Now.Year - Hotel Club - All rights reserved.
                            <abbr>Thanks <a href="http://glyphicons.com/" target="_blank">glyphicons</a></abbr>

                    </div>
                </div>

            </div>
        </footer>
    </div>

    @RenderSection("breakout", required: false)
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)
</body>
</html>
