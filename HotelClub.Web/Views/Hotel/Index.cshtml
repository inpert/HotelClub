@model IEnumerable<HotelClub.Core.Hotel>

@{
    ViewBag.Title = "Index";
}

<h2>List of Hotels</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-success"})
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr >
        <td class="col-md-2">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="col-md-2">
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td class="col-md-2">
            @Html.DisplayFor(modelItem => item.ModifiedOn)
        </td>
        <td class="col-md-6">
            <a href="~/Hotel/Edit/@item.Id"><i class="glyphicon glyphicon-pencil btn btn-xs btn-warning" style="padding: 4px"></i></a>
            <a href="~/Hotel/Details/@item.Id"><i class="glyphicon glyphicon-search btn btn-xs btn-info" style="padding: 4px"></i></a>
            <a href="~/Hotel/Delete/@item.Id"><i class="glyphicon glyphicon-remove-circle btn btn-xs btn-danger" style="padding: 4px"></i></a>
        </td>
    </tr>
}

</table>
